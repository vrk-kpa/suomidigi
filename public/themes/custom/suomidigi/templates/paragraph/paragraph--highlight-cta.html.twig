{% extends "paragraph.html.twig" %}

{% block paragraph %}
  {% set title = content.field_p_title %}
  {% set link = content.field_p_link_required['0']['#plain_text'] %}
  {% set link_target = content.field_p_link_target['0']['#markup'] %}
  {% set description = content.field_p_description.0 %}

  <a href="{{ link }}" {% if link_target is same as(1) %} target="_blank" {% endif %} {{ attributes.addClass(classes) }}>
    {% block content %}
      <div class="paragraph__title">
        {{ title }}
        <div aria-hidden="true" class="paragraph__title-icon">
          {% if icons_path %}
            <svg class="icon">
              <title>{{ title }}</title>
              <use xlink:href="{{ icons_path|trim }}#chevron-right"/>
            </svg>
          {% endif %}
        </div>
      </div>
      {% if description|render %}
        <p class="paragraph__content">
          {{ description }}
        </p>
      {% endif %}
    {% endblock %}
  </a>
{% endblock paragraph %}
